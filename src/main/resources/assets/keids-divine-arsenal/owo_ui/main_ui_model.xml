<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">

    <components>
        <flow-layout direction="horizontal">
            <children>
                <label>
                    <text>Drinkcraft Menu</text>
                    <shadow>true</shadow>

                    <positioning type="relative">50,5</positioning>
                </label>

                <flow-layout direction="horizontal" id="right box">
                    <children>


                        <flow-layout direction="vertical" id="box-container-tabs">
                            <children>

                                <button id="overview_button">
                                    <active>false</active>
                                    <text>Overview</text>
                                    <margins>
                                        <all>3</all>
                                    </margins>
                                </button>
                                <button id="shop_button">
                                    <active>true</active>
                                    <text>Shop</text>
                                    <margins>
                                        <all>3</all>
                                    </margins>
                                </button>
                                <button id="coming_button">
                                    <active>false</active>
                                    <text>coming soon</text>
                                    <margins>
                                        <all>3</all>
                                    </margins>
                                </button>

                            </children>

                            <padding>
                                <all>0</all>
                            </padding>

                            <margins>
                                <all>5</all>
                            </margins>
                            <sizing>
                                <vertical method="fixed">100</vertical>
                                <horizontal method="fixed">75</horizontal>
                            </sizing>

                        </flow-layout>





                        <flow-layout direction="vertical" id="box-container-info">
                            <children>
                                <label id="sips_left">
                                    <text>Sips left: </text>
                                    <max-width>200</max-width>
                                    <margins>
                                        <all>5</all>
                                    </margins>
                                </label>
                                <label id="points">
                                    <text>Points: </text>
                                    <max-width>200</max-width>
                                    <margins>
                                        <all>5</all>
                                    </margins>
                                </label>
                                <label id="total_sips">
                                    <text>Total sips: </text>
                                    <max-width>200</max-width>
                                    <color>gray</color>
                                    <margins>
                                        <top>15</top>
                                        <bottom>15</bottom>
                                        <horizontal>5</horizontal>
                                    </margins>
                                </label>
                            </children>


                            <padding>
                                <all>3</all>
                            </padding>
                            <margins>
                                <all>5</all>
                            </margins>
                            <sizing>
                                <vertical method="fixed">100</vertical>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>

                            <surface>
                                <flat>#77000000</flat>
                                <outline>#FF121212</outline>
                            </surface>

                        </flow-layout>

                        <flow-layout direction="vertical" id="box-container-mid">
                            <children>

                                <button id="drink_one">
                                    <active>true</active>
                                    <text>Drink one</text>
                                    <margins>
                                        <all>5</all>
                                    </margins>
                                </button>
                                <button id="drink_all">
                                    <active>true</active>
                                    <text>Drink all</text>
                                    <margins>
                                        <all>5</all>
                                    </margins>
                                </button>
                                <button id="reset_total">
                                    <active>true</active>
                                    <text>!</text>
                                    <tooltip-text>Reset your total sips counter</tooltip-text>
                                    <sizing>
                                        <horizontal method="fixed">12</horizontal>
                                        <vertical method="fixed">12</vertical>
                                    </sizing>
                                    <margins>
                                        <all>5</all>
                                    </margins>
                                </button>

                            </children>

                            <padding>
                                <all>3</all>
                            </padding>

                            <margins>
                                <all>5</all>
                            </margins>
                            <sizing>
                                <vertical method="fixed">100</vertical>
                                <horizontal method="fixed">75</horizontal>
                            </sizing>

                        </flow-layout>
                    </children>

                    <horizontal-alignment>center</horizontal-alignment>
                    <surface>
                        <panel dark="true"/>
                    </surface>

                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <flat>#C0101010</flat>
            </surface>

        </flow-layout>
    </components>
</owo-ui>
